<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="@dimen/padding_grid"
    android:columnCount="3">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boy :"
        android:layout_gravity="right"
        android:layout_row="0"
        android:layout_column="0"></TextView>


    <EditText
        android:id="@+id/edittext"
        android:maxLength="3"
        android:inputType="number"
        android:digits="0123456789"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1">

        <requestFocus></requestFocus>
    </EditText>

    <TextView
        android:id="@+id/tvboy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="9dp"
        android:gravity="right|center"
        android:layout_row="0"

        android:background="#069150"
        android:layout_column="1"></TextView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kilo"
            android:layout_gravity="right"
        android:layout_row="1"
        android:layout_column="0"></TextView>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:progress="20" />

    <TextView
        android:id="@+id/kilo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="50 kg"
        android:layout_row="2"
        android:layout_column="1"></TextView>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinsiyet"
        android:layout_gravity="right"
        android:layout_row="3"
        android:layout_column="0"></TextView>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="3"
        android:layout_column="1">

        <RadioButton
            android:id="@+id/radBay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bay"/>

        <RadioButton
            android:id="@+id/radBayan"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bayan"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ä°deal Kilo :"
        android:layout_gravity="right"
        android:layout_row="4"
        android:layout_column="0"></TextView>
    <TextView
        android:id="@+id/idealkilo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:background="#24b3cc"
        android:padding="8dp"
        android:layout_gravity="fill_horizontal"
        android:layout_column="1"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durum : "
        android:layout_gravity="right"
        android:layout_row="5"
        android:layout_column="0"></TextView>
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/durum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:background="#a31a8a"
        android:layout_gravity="fill_horizontal"
        android:padding="8dp"
        android:layout_column="1"></TextView>



    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9847952719857217/1636745064"
        android:layout_row="6"
        android:layout_column="1">
    </com.google.android.gms.ads.AdView>

</GridLayout>